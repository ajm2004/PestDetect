{
  "expo": {
    "name": "Pest Detect",
    "slug": "PestDetect",
    "description": "An app that detects pests in crops and gives the user information about the pest and how to control it.",
    "scheme": "pestdetect",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/Nsplash.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "plugins": [
      "expo-router",
      ["expo-camera",{"cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."}],
      ["expo-image-picker",{"photosPermission": "Allow $(PRODUCT_NAME) to access your Gallery."}]
    ]
  }
}
